FROM golang:latest as build

WORKDIR $GOPATH

RUN echo $PWD
COPY . .
RUN  ls src/github.com/diadata-org/api-golang/cmd/services/graphService

WORKDIR $GOPATH/src/github.com/diadata-org/api-golang/cmd/services/graphService

RUN go install

FROM gcr.io/distroless/base

COPY --from=build /go/bin/graphService /bin/graphService
COPY --from=build /go/src/github.com/diadata-org/api-golang/exchange-scrapers/config /config/

CMD ["graphService"]
